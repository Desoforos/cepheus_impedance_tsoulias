<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_ring">
	<xacro:include filename="$(find cepheus_description)/urdf/simple_ring.gazebo" />
	<link name="world"></link>

	<joint name="p1_joint" type="prismatic">
		<parent link="world"/>
		<child link="p1"/>
		<origin rpy="0 0 0" xyz="0 0 0.045"/>
		<axis xyz="1 0 0"/>
		<limit lower="-100" upper="100" effort="1000" velocity="10000"/>
		<dynamics damping="0" friction="0"/>
	</joint>
	<link name="p1">
		<inertial>
			<origin
				xyz="0.0 0.0 0.0"
				rpy="0.0 0.0 0.0" />
			<mass value="0.001" />
			<inertia
				ixx="1e-2"
				ixy="0.000001"
				ixz="0.000001"
				iyy="1e-2"
				iyz="0.000001"
				izz="1e-2" />
		</inertial>
	</link>
	<gazebo reference="p1">
		<mu1>0</mu1>
		<mu2>0</mu2>
	</gazebo>
	<joint name="p2_joint" type="prismatic">
		<parent link="p1"/>
		<child link="p2"/>
		<axis xyz="0 1 0"/>
		<limit
			lower="-100"
			upper="100"
			effort="1000"
			velocity="10000"/>
		<dynamics
			damping="0"
			friction="0"/>
	</joint>
	<link name="p2">
		<inertial>
			<origin
				xyz="0.0 0.0 0.0"
				rpy="0.0 0.0 0.0" />
			<mass value="0.001" />
			<inertia
				ixx="1e-2"
				ixy="0.000001"
				ixz="0.000001"
				iyy="1e-2"
				iyz="0.000001"
				izz="1e-2" />
		</inertial>
	</link>
	<gazebo reference="p2">
		<mu1>0</mu1>
		<mu2>0</mu2>
	</gazebo>
	<joint name="r_joint" type="continuous">
		<axis xyz="0 0 1"/>
		<parent link="p2"/>
		<origin rpy="0 0 0" xyz="0 0 0"/>
		<child link="base_link"/>
		<dynamics damping="0.0" friction="0.0"/>
	</joint>
  <link name="base_link">
	<visual>
    	<geometry>
        	<box size="0.09 0.09 0.09"/>
      	</geometry>
      	<origin xyz="0.045 0 0" rpy="0 0 0" />
      	<material name="blue">
       		<color rgba="0 0 .8 1"/>
      	</material>
    </visual>
    <collision>
      <geometry>
        <box size="0.09 0.09 0.09"/>
      </geometry>
	  <origin xyz="0.045 0 0" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="20.0"/>
      <inertia ixx="0.027" ixy="0" ixz="0" iyy="0.027" iyz="0" izz="0.027"/>
	  <origin xyz="0.045 0 0" rpy="0 0 0" />
    </inertial>
  </link>
  <gazebo reference="base_link">
	<mu1>0</mu1>
    <mu2>0</mu2>
	<kp>1000000</kp>
	<kd>0</kd>
  </gazebo>

</robot>