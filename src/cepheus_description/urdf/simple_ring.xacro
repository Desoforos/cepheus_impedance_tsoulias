<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_ring">
  <xacro:include filename="$(find cepheus_description)/urdf/simple_ring.gazebo" />

  <link name="world"></link> 

  <joint name="base_joint" type="planar">
    <origin xyz = "5 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.09 0.09 0.09"/>
      </geometry>
      <!-- <origin xyz="5 0 0" /> -->
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.09 0.09 0.09"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="90.0"/>
      <inertia ixx="0.0833" ixy="0" ixz="0" iyy="0.0833" iyz="0" izz="0.0833"/>
    </inertial>
  </link>

  <link name="ring_link">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.1"/>
      </geometry>
      <!-- <origin xyz="0 0 0.525" /> -->
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <joint name="simple_joint" type="continuous">
    <parent link="base_link"/>
    <child link="ring_link"/>
    <!-- <origin xyz="0 0 0.5" /> -->
  </joint>

</robot>